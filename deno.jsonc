{
  "tasks": {
    "dev": "deno run --watch lib/main.ts",
    "run": "deno run --allow-read lib/main.ts"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": ["src/"]
  }
}
